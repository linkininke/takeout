/* pages/cart/cart.wxss */
.cart-container {
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 购物车为空 */
.empty-cart {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 80vh;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 32rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.go-shopping-btn {
  background-color: #409EFF;
  color: white;
  padding: 20rpx 60rpx;
  border-radius: 50rpx;
  font-size: 28rpx;
  font-weight: bold;
}

/* 购物车列表 */
.cart-list {
  height: calc(100vh - 150rpx);
  padding: 20rpx;
}

.cart-item {
  display: flex;
  align-items: center;
  background-color: white;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.dish-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 10rpx;
  margin-right: 20rpx;
  background-color: #f0f0f0;
}

.dish-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 120rpx;
}

.dish-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.dish-price {
  font-size: 32rpx;
  font-weight: bold;
  color: #F56C6C;
}

.quantity-control {
  display: flex;
  align-items: center;
  margin-right: 30rpx;
}

.control-btn {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  font-weight: bold;
  background-color: #f0f0f0;
  color: #666;
}

.control-btn.increase {
  background-color: #409EFF;
  color: white;
}

.quantity {
  font-size: 28rpx;
  color: #333;
  margin: 0 20rpx;
  min-width: 40rpx;
  text-align: center;
}

.delete-btn {
  font-size: 36rpx;
  color: #999;
}

.delete-btn:active {
  color: #F56C6C;
}

/* 底部结算栏 */
.cart-footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 150rpx;
  background-color: white;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.1);
  z-index: 999;
}

.footer-left {
  display: flex;
  flex-direction: column;
}

.clear-cart {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.total-info {
  display: flex;
  align-items: baseline;
}

.total-text {
  font-size: 28rpx;
  color: #666;
  margin-right: 10rpx;
}

.total-price {
  font-size: 40rpx;
  font-weight: bold;
  color: #F56C6C;
  margin-right: 10rpx;
}

.total-count {
  font-size: 24rpx;
  color: #999;
}

.submit-btn {
  background-color: #409EFF;
  color: white;
  padding: 25rpx 60rpx;
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: bold;
}
