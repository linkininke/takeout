/* order.wxss */
.order-container {
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 订单状态筛选样式 */
.status-scroll {
  white-space: nowrap;
  background-color: white;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #e0e0e0;
}

.status-item {
  display: inline-block;
  padding: 15rpx 30rpx;
  margin: 0 10rpx;
  font-size: 28rpx;
  color: #666;
  background-color: #f5f5f5;
  border-radius: 30rpx;
}

.status-item.active {
  color: #409EFF;
  background-color: #ecf5ff;
}

/* 订单列表样式 */
.order-list {
  padding: 20rpx;
}

.order-item {
  background-color: white;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

/* 订单头部样式 */
.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.order-shop {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.order-status {
  font-size: 28rpx;
  color: #409EFF;
}

/* 订单商品列表样式 */
.order-goods {
  margin-bottom: 20rpx;
}

.goods-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.goods-name {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.goods-count {
  font-size: 26rpx;
  color: #666;
  margin: 0 20rpx;
}

.goods-price {
  font-size: 28rpx;
  color: #FF6B6B;
  font-weight: bold;
}

/* 订单底部样式 */
.order-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.order-total {
  font-size: 28rpx;
  color: #666;
}

.total-price {
  font-size: 32rpx;
  color: #FF6B6B;
  font-weight: bold;
  margin-left: 10rpx;
}

.order-actions {
  display: flex;
  gap: 10rpx;
}

.action-btn {
  background-color: #409EFF;
  color: white;
  font-size: 24rpx;
  border-radius: 8rpx;
  padding: 10rpx 20rpx;
  margin: 0;
  border: none;
  min-width: 100rpx;
}

.action-btn::after {
  border: none;
}

/* 空订单样式 */
.empty-order {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 28rpx;
  background-color: white;
  border-radius: 10rpx;
  margin: 20rpx;
}

/* 加载状态样式 */
.loading, .no-more {
  text-align: center;
  padding: 30rpx;
  color: #999;
  font-size: 24rpx;
}