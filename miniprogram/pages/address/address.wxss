/* pages/address/address.wxss */
.address-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 20rpx;
}

/* 头部样式 */
.address-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding: 20rpx;
  background-color: white;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.header-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.add-btn {
  background-color: #409EFF;
  color: white;
  font-size: 28rpx;
  border-radius: 8rpx;
  padding: 15rpx 30rpx;
  margin: 0;
  border: none;
}

.add-btn::after {
  border: none;
}

/* 地址列表样式 */
.address-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.address-item {
  background-color: white;
  border-radius: 10rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

/* 地址信息样式 */
.address-info {
  margin-bottom: 20rpx;
}

.address-header-info {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}

.name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-right: 20rpx;
}

.phone {
  font-size: 28rpx;
  color: #666;
  margin-right: 20rpx;
}

.default-tag {
  font-size: 24rpx;
  color: #409EFF;
  background-color: #ecf5ff;
  padding: 5rpx 15rpx;
  border-radius: 15rpx;
}

.address-detail {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
}

/* 操作按钮样式 */
.address-actions {
  display: flex;
  justify-content: flex-end;
  gap: 10rpx;
}

.action-btn {
  font-size: 24rpx;
  border-radius: 8rpx;
  padding: 10rpx 20rpx;
  margin: 0;
  border: none;
}

.action-btn::after {
  border: none;
}

.edit-btn {
  background-color: #409EFF;
  color: white;
}

.default-btn {
  background-color: #67C23A;
  color: white;
}

.delete-btn {
  background-color: #F56C6C;
  color: white;
}

/* 空地址样式 */
.empty-address {
  background-color: white;
  border-radius: 10rpx;
  padding: 100rpx 0;
  text-align: center;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.empty-address text {
  display: block;
  font-size: 28rpx;
  color: #999;
  margin-bottom: 30rpx;
}

.add-first-btn {
  background-color: #409EFF;
  color: white;
  font-size: 28rpx;
  border-radius: 8rpx;
  padding: 15rpx 40rpx;
  margin: 0;
  border: none;
}

.add-first-btn::after {
  border: none;
}
