/* pages/shop/shop.wxss */
.shop-container {
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 搜索栏样式 */
.search-bar {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background-color: white;
  border-bottom: 1rpx solid #e0e0e0;
}

.search-input {
  flex: 1;
  height: 70rpx;
  background-color: #f5f5f5;
  border-radius: 35rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
  margin-right: 20rpx;
}

.search-icon {
  padding: 15rpx 30rpx;
  background-color: #409EFF;
  color: white;
  border-radius: 30rpx;
  font-size: 28rpx;
}

/* 分类导航 */
.category-scroll {
  white-space: nowrap;
  background-color: white;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #e0e0e0;
}

.category-item {
  display: inline-block;
  padding: 15rpx 30rpx;
  margin: 0 10rpx;
  font-size: 28rpx;
  color: #666;
  background-color: #f5f5f5;
  border-radius: 30rpx;
}

.category-item.active {
  color: #409EFF;
  background-color: #ecf5ff;
}

/* 店铺列表 */
.shop-list {
  height: calc(100vh - 120rpx);
  padding: 20rpx;
}

.shop-item {
  display: flex;
  background-color: white;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.shop-logo {
  width: 120rpx;
  height: 120rpx;
  border-radius: 10rpx;
  margin-right: 20rpx;
  background-color: #f0f0f0;
}

.shop-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.shop-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.shop-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.shop-rating {
  font-size: 24rpx;
  color: #FF9800;
}

.shop-description {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.shop-footer {
  display: flex;
  justify-content: space-between;
  font-size: 22rpx;
  color: #999;
}

/* 加载状态 */
.loading, .no-more, .empty {
  text-align: center;
  padding: 30rpx;
  color: #999;
  font-size: 24rpx;
}
