/* pages/shop/shop-detail.wxss */
.shop-detail-container {
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 店铺信息 */
.shop-info {
  background-color: white;
  margin-bottom: 20rpx;
}

.shop-banner {
  width: 100%;
  height: 300rpx;
  background-color: #f0f0f0;
}

.shop-header {
  display: flex;
  padding: 20rpx;
  align-items: center;
}

.shop-logo {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  background-color: #f0f0f0;
}

.shop-meta {
  flex: 1;
}

.shop-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.shop-rating {
  font-size: 28rpx;
  color: #FF9800;
  margin-right: 20rpx;
}

.shop-description {
  font-size: 24rpx;
  color: #666;
  display: block;
  margin-top: 10rpx;
}

/* 分类导航 */
.category-scroll {
  white-space: nowrap;
  background-color: white;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #e0e0e0;
  margin-bottom: 20rpx;
}

.category-item {
  display: inline-block;
  padding: 15rpx 30rpx;
  margin: 0 10rpx;
  font-size: 28rpx;
  color: #666;
  background-color: #f5f5f5;
  border-radius: 30rpx;
}

.category-item.active {
  color: #409EFF;
  background-color: #ecf5ff;
}

/* 菜品列表 */
.dish-list {
  height: calc(100vh - 500rpx);
  padding: 0 20rpx 120rpx 20rpx;
}

.dish-section {
  margin-bottom: 30rpx;
}

.section-header {
  background-color: white;
  padding: 20rpx;
  border-radius: 10rpx 10rpx 0 0;
  border-bottom: 1rpx solid #e0e0e0;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.dish-items {
  background-color: white;
  border-radius: 0 0 10rpx 10rpx;
  padding: 20rpx;
}

.dish-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.dish-item:last-child {
  border-bottom: none;
}

.dish-image {
  width: 150rpx;
  height: 150rpx;
  border-radius: 10rpx;
  margin-right: 20rpx;
  background-color: #f0f0f0;
}

.dish-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.dish-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
  display: block;
}

.dish-description {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 15rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.dish-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.dish-price {
  font-size: 32rpx;
  font-weight: bold;
  color: #F56C6C;
}

.dish-actions {
  display: flex;
  align-items: center;
}

.action-btn {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  font-weight: bold;
}

.action-btn.add {
  background-color: #409EFF;
  color: white;
}

.action-btn.reduce {
  background-color: #f0f0f0;
  color: #666;
  margin-right: 20rpx;
}

.dish-quantity {
  font-size: 28rpx;
  color: #333;
  margin-right: 20rpx;
  min-width: 40rpx;
  text-align: center;
}

/* 购物车底部栏 */
.cart-bottom {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background-color: white;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.1);
  z-index: 999;
}

.cart-info {
  display: flex;
  align-items: center;
}

.cart-count {
  background-color: #F56C6C;
  color: white;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  margin-right: 20rpx;
}

.total-price {
  font-size: 32rpx;
  font-weight: bold;
  color: #F56C6C;
}

.cart-btn {
  background-color: #409EFF;
  color: white;
  padding: 20rpx 40rpx;
  border-radius: 50rpx;
  font-size: 28rpx;
  font-weight: bold;
}
