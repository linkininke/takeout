/* pages/coupon/coupon.wxss */
.coupon-container {
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 标签栏样式 */
.tab-bar {
  display: flex;
  background-color: white;
  border-bottom: 1rpx solid #e0e0e0;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.tab-item.active {
  color: #409EFF;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background-color: #409EFF;
  border-radius: 2rpx;
}

/* 优惠券列表样式 */
.coupon-list {
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

/* 优惠券项样式 */
.coupon-item {
  display: flex;
  background-color: white;
  border-radius: 10rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  position: relative;
  overflow: hidden;
}

/* 优惠券左侧样式 */
.coupon-left {
  width: 200rpx;
  background: linear-gradient(135deg, #FF6B6B, #FF8E8E);
  color: white;
  padding: 20rpx;
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.coupon-amount {
  font-size: 48rpx;
  font-weight: bold;
  line-height: 1;
}

.coupon-condition {
  font-size: 24rpx;
  margin-top: 10rpx;
}

/* 优惠券右侧样式 */
.coupon-right {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.coupon-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.coupon-desc {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.coupon-validity {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 20rpx;
}

/* 领取按钮样式 */
.receive-btn {
  background-color: #409EFF;
  color: white;
  font-size: 24rpx;
  border-radius: 8rpx;
  padding: 10rpx 20rpx;
  margin: 0;
  border: none;
  align-self: flex-start;
}

.receive-btn::after {
  border: none;
}

/* 优惠券状态样式 */
.coupon-status {
  font-size: 24rpx;
  color: #999;
  align-self: flex-start;
  background-color: #f5f5f5;
  padding: 10rpx 20rpx;
  border-radius: 8rpx;
}

/* 空优惠券样式 */
.empty-coupon {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 28rpx;
  background-color: white;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

/* 加载状态样式 */
.loading, .no-more {
  text-align: center;
  padding: 30rpx;
  color: #999;
  font-size: 24rpx;
}
