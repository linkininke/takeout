<!--pages/coupon/coupon.wxml-->
<view class="coupon-container">
  <!-- 标签栏 -->
  <view class="tab-bar">
    <view 
      class="tab-item {{currentTab === item.id ? 'active' : ''}}" 
      wx:for="{{tabList}}" 
      wx:key="id" 
      data-id="{{item.id}}" 
      bindtap="switchTab"
    >
      <text>{{item.name}}</text>
    </view>
  </view>
  
  <!-- 优惠券列表 -->
  <view class="coupon-list">
    <view 
      class="coupon-item" 
      wx:for="{{couponList}}" 
      wx:key="id"
    >
      <view class="coupon-left">
        <text class="coupon-amount">¥{{item.amount}}</text>
        <text class="coupon-condition">满{{item.condition}}元可用</text>
      </view>
      <view class="coupon-right">
        <text class="coupon-name">{{item.name}}</text>
        <text class="coupon-desc">{{item.description}}</text>
        <text class="coupon-validity">有效期至 {{item.endTime}}</text>
        <button 
          class="receive-btn" 
          wx:if="{{currentTab === 1}}"
          bindtap="receiveCoupon"
          data-id="{{item.id}}"
        >立即领取</button>
        <text class="coupon-status" wx:elif="{{currentTab === 3}}">已使用</text>
        <text class="coupon-status" wx:elif="{{currentTab === 4}}">已过期</text>
      </view>
    </view>
    
    <!-- 空优惠券提示 -->
    <view class="empty-coupon" wx:if="{{couponList.length === 0 && !loading}}">
      <text>暂无优惠券</text>
    </view>
    
    <!-- 加载更多 -->
    <view class="loading" wx:if="{{loading}}">
      <text>加载中...</text>
    </view>
    <view class="no-more" wx:if="{{!hasMore && couponList.length > 0}}">
      <text>没有更多了</text>
    </view>
  </view>
</view>
