/* pages/message/message.wxss */
.message-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 20rpx;
}

/* 页面标题 */
.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin: 30rpx 0;
}

/* 消息列表样式 */
.message-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

/* 消息项样式 */
.message-item {
  display: flex;
  align-items: flex-start;
  background-color: white;
  border-radius: 10rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  position: relative;
}

/* 未读消息样式 */
.message-item.unread {
  border-left: 4rpx solid #409EFF;
}

/* 消息状态标记 */
.message-status {
  width: 12rpx;
  height: 12rpx;
  background-color: #409EFF;
  border-radius: 50%;
  margin-right: 15rpx;
  margin-top: 20rpx;
}

/* 消息内容样式 */
.message-content {
  flex: 1;
}

/* 消息头部样式 */
.message-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

/* 消息标题样式 */
.message-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 消息时间样式 */
.message-time {
  font-size: 24rpx;
  color: #999;
  margin-left: 20rpx;
}

/* 消息描述样式 */
.message-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

/* 标记已读按钮样式 */
.read-btn {
  background-color: #409EFF;
  color: white;
  font-size: 24rpx;
  padding: 10rpx 20rpx;
  border-radius: 8rpx;
  margin-left: 20rpx;
  margin-top: 20rpx;
}

/* 空消息提示样式 */
.empty-message {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 28rpx;
  background-color: white;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

/* 加载状态样式 */
.loading, .no-more {
  text-align: center;
  padding: 30rpx;
  color: #999;
  font-size: 24rpx;
}
