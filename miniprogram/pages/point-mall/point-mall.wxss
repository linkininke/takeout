/* pages/point-mall/point-mall.wxss */
.point-mall-container {
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 积分余额样式 */
.point-balance {
  background: linear-gradient(135deg, #409EFF, #66B1FF);
  color: white;
  padding: 40rpx 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.balance-info {
  display: flex;
  flex-direction: column;
}

.balance-label {
  font-size: 28rpx;
  margin-bottom: 10rpx;
}

.balance-value {
  font-size: 64rpx;
  font-weight: bold;
}

.exchange-record {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  background-color: rgba(255, 255, 255, 0.2);
  padding: 15rpx 30rpx;
  border-radius: 30rpx;
}

.arrow {
  margin-left: 10rpx;
  font-size: 24rpx;
}

/* 商品列表样式 */
.goods-list {
  padding: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

/* 商品网格样式 */
.goods-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

/* 商品项样式 */
.goods-item {
  background-color: white;
  border-radius: 10rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

/* 商品图片样式 */
.goods-image {
  width: 100%;
  height: 200rpx;
  background-color: #f0f0f0;
}

/* 商品信息样式 */
.goods-info {
  padding: 20rpx;
}

.goods-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.goods-desc {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  line-height: 1.4;
}

.goods-bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.goods-point {
  font-size: 28rpx;
  color: #FF6B6B;
  font-weight: bold;
}

/* 兑换按钮样式 */
.exchange-btn {
  background-color: #409EFF;
  color: white;
  font-size: 24rpx;
  border-radius: 8rpx;
  padding: 10rpx 20rpx;
  margin: 0;
  border: none;
}

.exchange-btn::after {
  border: none;
}

/* 空商品提示 */
.empty-goods {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 28rpx;
  background-color: white;
  border-radius: 10rpx;
  margin-top: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

/* 加载状态样式 */
.loading, .no-more {
  text-align: center;
  padding: 30rpx;
  color: #999;
  font-size: 24rpx;
}
