/* app.wxss */
page {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
  background-color: #f5f7fa;
  color: #333;
  font-size: 14px;
  line-height: 1.5;
}

.container {
  padding: 20rpx;
  box-sizing: border-box;
}

/* 按钮样式 */
.btn {
  display: inline-block;
  padding: 12rpx 24rpx;
  background-color: #409EFF;
  color: #fff;
  border-radius: 8rpx;
  text-align: center;
  font-size: 28rpx;
  cursor: pointer;
}

.btn:hover {
  background-color: #66b1ff;
}

.btn:active {
  background-color: #3a8ee6;
}

/* 卡片样式 */
.card {
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
  padding: 20rpx;
  margin-bottom: 20rpx;
}

/* 列表样式 */
.list {
  background-color: #fff;
}

.list-item {
  padding: 20rpx;
  border-bottom: 1rpx solid #e6e6e6;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

/* 标题样式 */
h1 {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

h2 {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
}

h3 {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 12rpx;
}

/* 文本样式 */
.text-center {
  text-align: center;
}

.text-right {
  text-align: right;
}

.text-muted {
  color: #999;
}

.text-primary {
  color: #409EFF;
}

/* 间距样式 */
.mt-10 {
  margin-top: 10rpx;
}

.mt-20 {
  margin-top: 20rpx;
}

.mb-10 {
  margin-bottom: 10rpx;
}

.mb-20 {
  margin-bottom: 20rpx;
}

.p-10 {
  padding: 10rpx;
}

.p-20 {
  padding: 20rpx;
}
